# ========================================
# SUPABASE CONFIGURATION (REQUIRED)
# ========================================
# Get these from your Supabase project dashboard:
# https://app.supabase.com/project/YOUR_PROJECT/settings/api

NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ========================================
# SITE CONFIGURATION
# ========================================
# Your site URL (for generating short URLs)
# Development: http://localhost:3000
# Production: https://yourdomain.com

NEXT_PUBLIC_SITE_URL=http://localhost:3000

# ========================================
# STRIPE (Optional - for payments)
# ========================================
# Only needed if you want to enable pricing/payments

# STRIPE_PUBLIC_KEY=pk_test_...
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# ========================================
# EMAIL (Optional - for transactional emails)
# ========================================
# Only needed if you want email notifications

# RESEND_API_KEY=re_...
# EMAIL_FROM=noreply@yourdomain.com

# ========================================
# OAUTH (Optional - for social login)
# ========================================
# Only needed if you want Google/other social login

# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=

# ========================================
# ANALYTICS (PostHog)
# ========================================
# Get these from your PostHog project:
# https://app.posthog.com/project/settings

NEXT_PUBLIC_POSTHOG_KEY=your_posthog_project_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com
